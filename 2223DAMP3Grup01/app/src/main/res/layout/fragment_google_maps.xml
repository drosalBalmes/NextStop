<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="500sp"
    android:background="@color/background"
    tools:context=".fragments.googleMapsFragment">

    <TextView
        android:id="@+id/textViewResumRuta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="RESUM DE LA RUTA"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textSize="40sp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/lastRecycler"
        android:layout_width="match_parent"
        android:layout_below="@+id/textViewResumRuta"
        android:layout_height="match_parent"
        android:layout_above="@+id/btnDibuixaAlMaps"

        />

    <Button
        android:id="@+id/btnDibuixaAlMaps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Dibuixa al maps"
        />
</RelativeLayout>